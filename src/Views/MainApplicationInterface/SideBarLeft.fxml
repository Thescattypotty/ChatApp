<AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1E2129;" styleClass="rounded"  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Main.SideBarController">


    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Chats" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <ImageView fitHeight="24.0" fitWidth="23.0" layoutX="166.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true" styleClass="Label">
            <image>
                <Image url="@../Images/plus.png" />
            </image>
        </ImageView>
        <TextField layoutX="10.0" layoutY="49.0" prefHeight="27.0" prefWidth="180.0" promptText="Search or start a new chat" styleClass="textfield" />
        <ImageView fitHeight="22.0" fitWidth="16.0" layoutX="170.0" layoutY="55.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Images/filtre.png" />
            </image>
        </ImageView>
        <AnchorPane layoutY="90.0" prefHeight="40.0" prefWidth="200.0" styleClass="Label">
            <children>
                <Circle fill="WHITE" layoutX="25.0" layoutY="20.0" radius="18.0" stroke="BLACK" strokeType="INSIDE" />
                <Label fx:id="username" layoutX="50.0" layoutY="11.0" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="time" layoutX="162.0" layoutY="13.0" textFill="WHITE">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
